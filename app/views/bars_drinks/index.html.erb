<center>
  <h2><%= @bar.name %>s Drinks Offered</h2>

  <% @drinks.each do |drink| %>
    <h4><br>
    Name: <%= drink.name %>
    <br>
    Proof: <%= drink.proof %>
    <br>
    Made In Mexico: <%= drink.made_in_mexico %>
    <br>
    </h4>
  <% end %>
  <br>
  <%= link_to "Add a drink to #{@bar.name}!", "/bars/#{@bar.id}/drinks/new" %>
  <br>
  <%= link_to "Sort #{@bar.name}s Drinks Alphabetically", "/bars/#{@bar.id}/drinks/" %>
  <br>
  <br>
  <br>

  <h2> 
  <%= form_with url: "/bars/#{@bar.id}/drinks", method: :post, local: true do |f| %>
    Only Show Drinks at <%= "#{@bar.name}" %> Over <%= f.label :proof  %>
                                                   <%= f.number_field :proof %>
  <% end %>

  </h2>
</center>